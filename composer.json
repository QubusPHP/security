{
    "name": "qubus/security",
    "description": "Security components.",
    "keywords": [
        "csrf",
        "security",
        "escaper",
        "htmlpurifier"
    ],
    "homepage": "https://github.com/QubusPHP/security",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "joshua@joshuaparker.dev",
            "homepage": "https://joshuaparker.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-mbstring": "*",
        "gettext/gettext": "^5",
        "gettext/translator": "^1.2",
        "ircmaxell/random-lib": "^1.2",
        "qubus/event-dispatcher": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "qubus/qubus-coding-standard": "^1.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Security\\": ""
        },
        "files": [
            "Helpers/core.php",
            "Helpers/domain.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
